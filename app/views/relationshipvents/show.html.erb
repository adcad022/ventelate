<div class="page-header">
  <h3>Relationshipvent on <%= @relationshipvent.relationship_topic %>
  <a href="/relationshipvents" class="btn btn-danger">
      Back
  </a>
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Relationship topic</dt>
      <dd><%= @relationshipvent.relationship_topic %></dd>

      <dt>Urgency</dt>
      <dd><%= @relationshipvent.urgency %></dd>

      <dt>Story</dt>
      <dd><%= @relationshipvent.story %></dd>

    </dl>

  <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>
            <th>Support</th>
          </tr>
          <% @relationshipvent.relationshiplifts.each do |relationshiplift| %>
          <tr>
            <td><%= relationshiplift.support %></td>
          </tr>
          <tr>
            <% if relationshiplift.user_id.to_i == current_user.id.to_i %>
            <td><div class="btn-group">
              <a href="/relationshiplifts/<%= relationshiplift.id %>/edit" class="btn btn-warning">
                Edit
              </a>
              <a href="/delete_relationshiplift/<%= relationshiplift.id %>" class="btn btn-danger" rel="nofollow">
                Delete
              </a>
            <% end %>
            </div>
          </td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>


    <div>
    <li class="list-group-item">
      <form action="/create_relationshiplift" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for user_id -->
        <input name="user_id" class="hidden" value="<%= current_user.id %>">

        <input name="relationshipvent_id" class="hidden" value="<%= @relationshipvent.id %>"

        <div class="form-group">

          <textarea id="support" name="support" placeholder="" class="form-control" rows="3"><%= @relationshiplift.support %></textarea>
        <td></td>
        <button class="btn btn-stop">
          Post Support
        </button>
        </div>
      </form>
    </li>
    </div>


    <div class="btn-group btn-group-justified">
      <a href="/relationshipvents" class="btn btn-primary">
        Back
      </a>
    </div>
    <div class="btn-group btn-group-justified">

    <a href="/relationshipvents/<%= @relationshipvent.id %>/edit" class="btn btn-warning">
      Edit
    </a>
    <a href="/delete_relationshipvent/<%= @relationshipvent.id %>" class="btn btn-danger" rel="nofollow">
      Delete
    </a>
    </div>
  </div>
</div>
