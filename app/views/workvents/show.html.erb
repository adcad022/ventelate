    <div>
    <li class="list-group-item">
      <form action="/create_worklift" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for user_id -->
        <input name="user_id" class="hidden" value="<%= current_user.id %>">

        <input name="workvent_id" class="hidden" value="<%= @workvent.id %>"

        <div class="form-group">

          <textarea id="support" name="support" placeholder="" class="form-control" rows="3"><%= @worklift.support %></textarea>
        <td></td>
        <button class="btn btn-stop">
          Post Support
        </button>
        </div>
      </form>
    </li>
    </div>

    <div class="btn-group btn-group-justified">
      <a href="/workvents" class="btn btn-primary">
        Back
      </a>
    </div>
    <% if @workvent.user_id.to_i == current_user.id.to_i %>
    <div class="btn-group btn-group-justified">
    <a href="/workvents/<%= @workvent.id %>/edit" class="btn btn-warning">
      Edit
    </a>
    <a href="/delete_workvent/<%= @workvent.id %>" class="btn btn-danger" rel="nofollow">
      Delete
    </a>
    <% end %>
    </div>
  </div>
  </div>
