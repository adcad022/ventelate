<div class="page-header">
  <h3>Workvent on <%= @workvent.work_topic %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Work topic</dt>
      <dd><%= @workvent.work_topic %></dd>

      <dt>Urgency</dt>
      <dd><%= @workvent.urgency %></dd>

      <dt>Story</dt>
      <dd><%= @workvent.story %></dd>
    </dl>


  <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>
            <th>Support</th>
          </tr>
          <% @workvent.worklifts.each do |worklift| %>
          <tr>
            <td><%= worklift.support %></td>
          </tr>
          <tr>
            <% if worklift.user_id.to_i == current_user.id.to_i %>
            <td><div class="btn-group">
              <a href="/worklifts/<%= worklift.id %>/edit" class="btn btn-warning">
                Edit
              </a>
              <a href="/delete_worklift/<%= worklift.id %>" class="btn btn-danger" rel="nofollow">
                Delete
              </a>
            <% end %>
            </div>
          </td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>

