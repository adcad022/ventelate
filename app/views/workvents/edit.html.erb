<!-- Validation failure messages -->
<% if @workvent.errors.any? %>
  <% @workvent.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Workvent #<%= @workvent.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_workvent/<%= @workvent.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <input name="user_id" type="hidden" value="<%= current_user.id %>">

      <!-- Label and input for work_topic -->
      <div class="form-group">
        <label for="work_topic" class="control-label">
          Work topic
        </label>

        <input type="text" id="work_topic" name="work_topic" placeholder="Work topic" class="form-control" value="<%= @workvent.work_topic %>">
      </div>

      <!-- Label and input for urgency -->
      <div class="form-group">
        <label for="urgency" class="control-label">
          Urgency
        </label>
      <select name="urgency">
      <%= urgency_level = @relationshipvent.urgency %>
  <option value="1" <%= "selected" if urgency_level == 1%>>1</option>
  <option value="2" <%= "selected" if urgency_level == 2%>>2</option>
  <option value="3" <%= "selected" if urgency_level == 3%>>3</option>
  <option value="4" <%= "selected" if urgency_level == 4%>>4</option>
  <option value="5" <%= "selected" if urgency_level == 5%>>5</option>
  <option value="6" <%= "selected" if urgency_level == 6%>>6</option>
  <option value="7" <%= "selected" if urgency_level == 7%>>7</option>
  <option value="8" <%= "selected" if urgency_level == 8%>>8</option>
  <option value="9" <%= "selected" if urgency_level == 9%>>9</option>
  <option value="10" <%= "selected" if urgency_level == 10%>>10</option>
        </select>
      </div>

      <!-- Label and input for story -->
      <div class="form-group">
        <label for="story" class="control-label">
          Story
        </label>

        <textarea id="story" name="story" placeholder="Story" class="form-control" rows="3"><%= @workvent.story %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Workvent
      </button>
      or
      <a href="/workvents/<%= @workvent.id %>">Cancel</a>
    </form>
  </div>
</div>
