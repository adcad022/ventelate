<div class="page-header">
  <h1>
    Vents
    <a href="/vents/new" class="btn btn-lg btn-success">New Vent</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Topic</th>
        <th>Urgency</th>
        <th>Story</th>
        <th>Reply</th>
        <th>User Actions</th>
      </tr>

      <% @vents.each do |vent| %>
      <tr>
        <td><%= vent.topic %></td>
        <td><%= vent.urgency %></td>
        <td><%= vent.story %></td>
        <td>
          <a href="/responses/new" class="glyphicon glyphicon-heart-empty"></a>
        </td>
        <td>
          <a href="/vents/<%= vent.id %>" class="btn btn-primary">Show</a>
          <a href="/vents/<%= vent.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_vent/<%= vent.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
