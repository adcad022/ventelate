<div class="page-header">
  <h3>Othervent on <%= @othervent.other_topic %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Other topic</dt>
      <dd><%= @othervent.other_topic %></dd>

      <dt>Urgency</dt>
      <dd><%= @othervent.urgency %></dd>

      <dt>Story</dt>
      <dd><%= @othervent.story %></dd>

    </dl>

  <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>
            <th>Support</th>
          </tr>
          <% @othervent.otherlifts.each do |otherlift| %>
          <tr>
            <td><%= otherlift.support %></td>
          </tr>
          <tr>
            <% if otherlift.user_id.to_i == current_user.id.to_i %>
            <td><div class="btn-group">
              <a href="/otherlifts/<%= otherlift.id %>/edit" class="btn btn-warning">
                Edit
              </a>
              <a href="/delete_otherlift/<%= otherlift.id %>" class="btn btn-danger" rel="nofollow">
                Delete
              </a>
            <% end %>
            </div>
          </td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>


    <div>
    <li class="list-group-item">
      <form action="/create_otherlift" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for user_id -->
        <input name="user_id" class="hidden" value="<%= current_user.id %>">

        <input name="othervent_id" class="hidden" value="<%= @othervent.id %>"

        <div class="form-group">

          <textarea id="support" name="support" placeholder="" class="form-control" rows="3"><%= @otherlift.support %></textarea>
        <td></td>
        <button class="btn btn-stop">
          Post Support
        </button>
        </div>
      </form>
    </li>
    </div>

    <div class="btn-group btn-group-justified">
      <a href="/othervents" class="btn btn-primary">
        Back
      </a>
      </div>

    <div class="btn-group btn-group-justified">
        <% if @othervent.user_id.to_i == current_user.id.to_i %>
    <a href="/othervents/<%= @othervent.id %>/edit" class="btn btn-warning">
      Edit
    </a>
    <a href="/delete_othervent/<%= @othervent.id %>" class="btn btn-danger" rel="nofollow">
      Delete
    </a>
    <% end %>
    </div>
  </div>
  </div>
