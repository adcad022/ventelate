<!-- Validation failure messages -->
<% if @lifelift.errors.any? %>
  <% @lifelift.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Lifelift #<%= @lifelift.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_lifelift/<%= @lifelift.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @lifelift.user_id %>">
      </div>

      <!-- Label and input for lifevent_id -->
      <div class="form-group">
        <label for="lifevent_id" class="control-label">
          Lifevent
        </label>

        <input type="text" id="lifevent_id" name="lifevent_id" placeholder="Lifevent" class="form-control" value="<%= @lifelift.lifevent_id %>">
      </div>

      <!-- Label and input for support -->
      <div class="form-group">
        <label for="support" class="control-label">
          Support
        </label>

        <textarea id="support" name="support" placeholder="Support" class="form-control" rows="3"><%= @lifelift.support %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Lifelift
      </button>
      or
      <a href="/lifelifts/<%= @lifelift.id %>">Cancel</a>
    </form>
  </div>
</div>
